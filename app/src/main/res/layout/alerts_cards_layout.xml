<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
        android:id="@+id/alertCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/alertRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="8dp">

            <ImageView
                android:id="@+id/alertRewardImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textViewNode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/alertRewardImage"
                android:text="Aphrodite (Venus)"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewMissionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewNode"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/alertRewardImage"
                android:text="Mobile Defense"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNode"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/textViewMissionType"
                android:text="-" />

            <TextView
                android:id="@+id/textViewMissionFaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewNode"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/textView10"
                android:text="Corpus"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/textViewMissionType"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Expired"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/alertRewardsTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alertRewardImage"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone">

            </TableLayout>

            <TextView
                android:id="@+id/textViewMinLvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/alertRewardImage"
                android:layout_below="@id/textViewMissionType"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="15" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textViewMinLvl"
                android:layout_below="@id/textViewMissionType"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="-" />

            <TextView
                android:id="@+id/textViewMaxLvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textView13"
                android:layout_below="@id/textViewMissionFaction"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="20" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>